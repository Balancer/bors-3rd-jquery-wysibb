{
	"name": "balancer/bors-3rd-jquery-wysibb",
	"description": "WysiBB support in BORSÂ© Framework",
	"license": "MIT",

	"authors": [
		{
			"name": "Balancer",
			"email": "balancer@balancer.ru"
		}
	],

	"require": {
        "balancer/bors-core": "*",
		"robloach/component-installer": "*",
		"atelierspierrot/assets-manager": "*"
	},

	"type-disabled": "component",
	"type": "bors-assets",

	"autoload": {
		"classmap": ["classes/"]
	},

	"extra": {
		"component": {
			"package-asset-dir": "public",
			"scripts": [
				"public/jquery.wysibb.js"
			],
			"files": [
				"public/*",
				"public/*/*",
				"public/*/*/*"
			]
		},
		"assets-dir": "public",
		"assets-presets": {
			"jquery.wysibb": {
				"jsfiles_footer": "min:/jquery.wysibb.min.js",
				"require": ["/lang", "/preset", "/theme"]
			}
		}
	}
}
